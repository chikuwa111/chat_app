%header.navbar.navbar-fixed-top.navbar-inverse
  .container
    = link_to "Chat_app", root_path, id: "logo"
    %nav
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li= link_to "Messages", messages_path, data: {no_turbolink: true}
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              Account
              %b.caret
            %ul.dropdown-menu
              %li= link_to "Profile", users_path
              %li= link_to "Settings", edit_user_registration_path
              %li.divider
              %li
                = link_to "Log out", destroy_user_session_path, method: :delete
        - else
          %li.navbar-link= link_to "Sign up", new_user_registration_path
          %li.navbar-link= link_to "Login", new_user_session_path